{% layout 'layout.liquid'%}
{% block content %}
  <div>
    <h2 class="display-6">All Stock</h2>
    <div class="row">
      {% for item in items %}
        <div class="card" style="width: 18rem;">
          <h5 class="card-header">{{ items.title }}
          </h5>
          <div class="card-body">
            <h5 class="card-title">
              {{ item.title }}
            </h5>
            <p class="card-text">
              Price:
              {{ item.price }}
            </p>
            <a href="/items/{{ item.id }}" class="btn btn-info">
              View
              {{ item.title }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}}}}